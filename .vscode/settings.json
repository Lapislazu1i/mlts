{
    "cmake.generator": "Ninja",
    "clangd.checkUpdates": true,
    "clangd.arguments": [
        "--background-index", /// 在后台自动分析文件（基于complie_commands)
        "--compile-commands-dir=D:\\git\\mlts\\build", /// 标记compelie_commands.json文件的目录位置
        "-j=8", /// 同时开启的任务数量
        "--query-driver=clang++.exe", /// clang 路径，使用命令 which clang++ 获取的的路径
        "--all-scopes-completion", /// 全局补全（会自动补充头文件）
        "--completion-style=detailed", /// 更详细的补全内容
        "--header-insertion=never", /// 补充头文件的形式
        "--pch-storage=disk", /// pch优化的位置
    ],
    "cmake.configureArgs": [
        "-DCMAKE_TOOLCHAIN_FILE=D:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "-DVCPKG_ROOT=D:/vcpkg",
        "-DVCPKG_TARGET_TRIPLET=x64-windows-static"
    ],
